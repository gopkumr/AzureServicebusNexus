@page "/connection"
@using NexusBusExplorer.Domain.Services.Abstractions

@inject IServicebusAdminService servicebusAdminService

<MudDialog>
    <DialogContent>
        <MudTextField T="string" @bind-Value="@tenantId" Label="TenantId"></MudTextField>
        <MudTextField T="string" @bind-Value="@subscriptionId" Label="Subscription Id"></MudTextField>
        <MudTextField T="string" @bind-Value="@servicebusNamespaceName" Label="Servicebus Namespace Name"></MudTextField>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">Ok</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private MudDialogInstance MudDialog { get; set; }

    private string subscriptionId{ get; set; }
    private string servicebusNamespaceName{ get; set; }
    private string tenantId { get; set; }

    private void Submit() {
        var namespaceValue = servicebusAdminService.Connect(tenantId, subscriptionId, servicebusNamespaceName);
        
    }

    private void Cancel() => MudDialog.Cancel();
}
